<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background2"
    tools:context=".ResultadoActivity">

    <TextView
        android:id="@+id/tvMeme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_text_meme"
        android:fontFamily="@font/press"
        android:text="@string/texto2"
        android:textAlignment="center"
        android:textSize="@dimen/meme_text_size"
        app:layout_constraintBottom_toTopOf="@+id/ivMeme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivMeme"
        android:layout_width="@dimen/image_meme_width"
        android:layout_height="@dimen/image_meme_height"
        android:layout_margin="@dimen/image_meme_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMeme" />
</androidx.constraintlayout.widget.ConstraintLayout>