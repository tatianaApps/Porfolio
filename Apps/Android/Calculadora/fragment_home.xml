<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background3">

    <TextView
        android:id="@+id/tvHomeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/general_margin"
        android:fontFamily="@font/homemade"
        android:text="@string/home_title"
        android:textAlignment="center"
        android:textSize="@dimen/text_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHomeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/home_top_margin"
        android:fontFamily="@font/dosis"
        android:text="@string/home_name"
        android:textAlignment="center"
        android:textSize="@dimen/home_text_name"
        app:layout_constraintTop_toBottomOf="@id/ivHome"/>

    <TextView
        android:id="@+id/tvHomeAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/start_margin"
        android:fontFamily="@font/dosis"
        android:text="@string/home_age"
        android:textAlignment="center"
        android:textSize="@dimen/home_text_age"
        app:layout_constraintTop_toBottomOf="@+id/tvHomeName" />

    <ImageView
        android:id="@+id/ivHome"
        android:layout_width="@dimen/image_size2"
        android:layout_height="@dimen/image_size2"
        app:layout_constraintTop_toBottomOf="@id/tvHomeTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/start_margin"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ribon"/>

    <ImageView
        android:id="@+id/ivHome2"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/general_margin"
        app:layout_constraintTop_toBottomOf="@id/tvHomeAge"

        android:src="@drawable/ribon2"/>

    <ImageView
        android:id="@+id/home3"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/general_margin"
        app:layout_constraintTop_toBottomOf="@id/tvHomeAge"

        app:layout_constraintStart_toEndOf="@id/ivHome2"
        android:src="@drawable/ribon3"/>
</androidx.constraintlayout.widget.ConstraintLayout>