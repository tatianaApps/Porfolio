<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivSinger"
        android:layout_width="@dimen/celda_layout_width"
        android:layout_height="@dimen/celda_layout_height"
        android:layout_margin="@dimen/celda_margin_start"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSingerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/celda_text_margin"
        android:layout_marginTop="@dimen/celda_margin_start"
        android:fontFamily="@font/dosis"
        android:textAlignment="textEnd"
        android:text="@string/celda_title"
        android:textSize="@dimen/celda_text_size"

        app:layout_constraintEnd_toStartOf="@id/ivSinger"
        app:layout_constraintTop_toTopOf="@id/ivSinger"/>

    <TextView
        android:id="@+id/tvSingerDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/celda_text_margin"
        android:fontFamily="@font/dosis"
        android:text="@string/celda_title"
        android:textSize="@dimen/text_metal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivSinger" />


</androidx.constraintlayout.widget.ConstraintLayout>