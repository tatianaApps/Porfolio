<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background6">

    <ImageView
        android:id="@+id/ivIcono"
        android:layout_width="@dimen/default_image_width"
        android:layout_height="@dimen/default_image_height"
        android:layout_marginStart="@dimen/default_image_margin_start"
        android:layout_marginTop="@dimen/default_image_margin_top"
        android:layout_marginEnd="@dimen/default_image_margin_end"
        android:src="@drawable/foto1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_toolbar_start"
        android:layout_marginTop="@dimen/default_margin_toolbar_top"
        android:layout_marginEnd="@dimen/default_margin_toolbar_end"
        android:fontFamily="@font/dosis"
        android:inputType="number"
        android:textAlignment="textEnd"
        android:textSize="@dimen/default_text_size_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivIcono" />

    <Button
        android:id="@+id/btnSiete"
        android:layout_width="@dimen/default_width_button"
        android:layout_height="@dimen/default_height_button"
        android:layout_marginStart="@dimen/default_margin_start"
        android:layout_marginTop="@dimen/default_margin_top_toolbar"
        android:fontFamily="@font/dosis"
        android:padding="@dimen/default_padding"
        android:text="@string/siete"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toTopOf="@id/btnCuatro"
        app:layout_constraintEnd_toStartOf="@id/btnOcho"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etToolbar" />

    <Button
        android:id="@+id/btnOcho"
        android:layout_width="@dimen/default_width_button"
        android:layout_height="@dimen/default_height_button"
        android:layout_marginTop="@dimen/default_margin_top_toolbar"
        android:fontFamily="@font/dosis"
        android:padding="@dimen/default_padding"
        android:text="@string/ocho"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toTopOf="@id/btnCinco"
        app:layout_constraintEnd_toStartOf="@id/btnNueve"
        app:layout_constraintStart_toEndOf="@id/btnSiete"
        app:layout_constraintTop_toBottomOf="@id/etToolbar" />

    <Button
        android:id="@+id/btnNueve"
        android:layout_width="@dimen/default_width_button"
        android:layout_height="@dimen/default_height_button"
        android:layout_marginTop="@dimen/default_margin_top_toolbar"
        android:fontFamily="@font/dosis"
        android:padding="@dimen/default_padding"
        android:text="@string/nueve"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toTopOf="@id/btnSeis"
        app:layout_constraintEnd_toStartOf="@id/btnPorcentaje"
        app:layout_constraintStart_toEndOf="@id/btnOcho"
        app:layout_constraintTop_toBottomOf="@id/etToolbar" />

    <Button
        android:id="@+id/btnPorcentaje"
        android:layout_width="@dimen/default_width_button"
        android:layout_height="@dimen/default_height_button"
        android:layout_marginTop="@dimen/default_margin_top_toolbar"
        android:fontFamily="@font/dosis"
        android:padding="@dimen/default_padding"
        android:text="@string/porcentaje"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toTopOf="@id/btnMultiplicar"
        app:layout_constraintEnd_toStartOf="@id/btnRaiz"
        app:layout_constraintStart_toEndOf="@id/btnNueve"
        app:layout_constraintTop_toBottomOf="@id/etToolbar" />

    <Button
        android:id="@+id/btnRaiz"
        android:layout_width="@dimen/default_width_button"
        android:layout_height="@dimen/default_height_button"
        android:layout_marginTop="@dimen/default_margin_top_toolbar"
        android:layout_marginEnd="@dimen/default_margin_end"
        android:fontFamily="@font/dosis"
        android:padding="@dimen/default_padding"
        android:text="@string/raiz"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toTopOf="@id/btnDividir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnMultiplicar"
        app:layout_constraintTop_toBottomOf="@id/etToolbar" />

    <Button
        android:id="@+id/btnCuatro"
        android:layout_width="@dimen/default_width_button"
        android:layout_height="@dimen/default_height_button"
        android:layout_marginStart="@dimen/default_margin_start"
        android:fontFamily="@font/dosis"
        android:padding="@dimen/default_padding"
        android:text="@string/cuatro"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toTopOf="@id/btnUno"
        app:layout_constraintEnd_toStartOf="@+id/btnCinco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSiete" />

    <Button
        android:id="@+id/btnCinco"
        android:layout_width="@dimen/default_width_button"
        android:layout_height="@dimen/default_height_button"
        android:fontFamily="@font/dosis"
        android:padding="@dimen/default_padding"
        android:text="@string/cinco"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toTopOf="@id/btnDos"
        app:layout_constraintEnd_toStartOf="@id/btnSeis"
        app:layout_constraintStart_toEndOf="@id/btnCuatro"
        app:layout_constraintTop_toBottomOf="@id/btnOcho" />

    <Button
        android:id="@+id/btnSeis"
        android:layout_width="@dimen/default_width_button"
        android:layout_height="@dimen/default_width_button"
        android:fontFamily="@font/dosis"
        android:padding="@dimen/default_padding"
        android:text="@string/seis"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toTopOf="@id/btnTres"
        app:layout_constraintEnd_toStartOf="@id/btnMultiplicar"
        app:layout_constraintStart_toEndOf="@id/btnCinco"
        app:layout_constraintTop_toBottomOf="@id/btnNueve" />

    <Button
        android:id="@+id/btnMultiplicar"
        android:layout_width="@dimen/default_width_button"
        android:layout_height="@dimen/default_height_button"
        android:fontFamily="@font/dosis"
        android:padding="@dimen/default_padding"
        android:text="@string/multiplicacion"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toTopOf="@id/btnMas"
        app:layout_constraintEnd_toStartOf="@id/btnDividir"
        app:layout_constraintStart_toEndOf="@id/btnSeis"
        app:layout_constraintTop_toBottomOf="@id/btnPorcentaje" />

    <Button
        android:id="@+id/btnDividir"
        android:layout_width="@dimen/default_width_button"
        android:layout_height="@dimen/default_height_button"
        android:layout_marginEnd="@dimen/default_margin_end"
        android:fontFamily="@font/dosis"
        android:padding="@dimen/default_padding"
        android:text="@string/division"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toTopOf="@id/btnMenos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnMultiplicar"
        app:layout_constraintTop_toBottomOf="@id/btnRaiz" />

    <Button
        android:id="@+id/btnUno"
        android:layout_width="@dimen/default_width_button"
        android:layout_height="@dimen/default_height_button"
        android:layout_marginStart="@dimen/default_margin_start"
        android:fontFamily="@font/dosis"
        android:padding="@dimen/default_padding"
        android:text="@string/uno"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toTopOf="@+id/btnCero"
        app:layout_constraintEnd_toStartOf="@id/btnDos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCuatro" />

    <Button
        android:id="@+id/btnDos"
        android:layout_width="@dimen/default_width_button"
        android:layout_height="@dimen/default_height_button"
        android:fontFamily="@font/dosis"
        android:padding="@dimen/default_padding"
        android:text="@string/dos"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toTopOf="@id/btnPunto"
        app:layout_constraintEnd_toStartOf="@id/btnTres"
        app:layout_constraintStart_toEndOf="@id/btnUno"
        app:layout_constraintTop_toBottomOf="@id/btnCinco" />

    <Button
        android:id="@+id/btnTres"
        android:layout_width="@dimen/default_width_button"
        android:layout_height="@dimen/default_height_button"
        android:fontFamily="@font/dosis"
        android:padding="@dimen/default_padding"
        android:text="@string/tres"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toTopOf="@+id/btnCambioSigno"
        app:layout_constraintEnd_toStartOf="@id/btnMas"
        app:layout_constraintStart_toEndOf="@id/btnDos"
        app:layout_constraintTop_toTopOf="@+id/btnMas" />

    <Button
        android:id="@+id/btnMas"
        android:layout_width="@dimen/default_width_button"
        android:layout_height="@dimen/default_height_button"
        android:layout_marginBottom="@dimen/default_margin_bottom"
        android:fontFamily="@font/dosis"
        android:padding="@dimen/default_padding"
        android:text="@string/mas"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnMenos"
        app:layout_constraintStart_toEndOf="@id/btnTres"
        app:layout_constraintTop_toTopOf="@+id/btnMenos" />

    <Button
        android:id="@+id/btnMenos"
        android:layout_width="@dimen/default_width_button"
        android:layout_height="@dimen/default_height_button"
        android:layout_marginEnd="@dimen/default_margin_end"
        android:fontFamily="@font/dosis"
        android:padding="@dimen/default_padding"
        android:text="@string/menos"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toTopOf="@id/btnIgual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnMas"
        app:layout_constraintTop_toBottomOf="@id/btnDividir" />

    <Button
        android:id="@+id/btnCero"
        android:layout_width="@dimen/default_width_button"
        android:layout_height="@dimen/default_height_button"
        android:layout_marginStart="@dimen/default_margin_start"
        android:layout_marginBottom="@dimen/default_margin_bottom"
        android:fontFamily="@font/dosis"
        android:padding="@dimen/default_padding"
        android:text="@string/cero"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnPunto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnUno" />

    <Button
        android:id="@+id/btnPunto"
        android:layout_width="@dimen/default_width_button"
        android:layout_height="@dimen/default_height_button"
        android:layout_marginBottom="@dimen/default_margin_bottom"
        android:fontFamily="@font/dosis"
        android:padding="@dimen/default_padding"
        android:text="@string/punto"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnCambioSigno"
        app:layout_constraintStart_toEndOf="@id/btnCero"
        app:layout_constraintTop_toBottomOf="@id/btnDos" />

    <Button
        android:id="@+id/btnCambioSigno"
        android:layout_width="@dimen/default_width_button"
        android:layout_height="@dimen/default_height_button"
        android:layout_marginBottom="@dimen/default_margin_bottom"
        android:fontFamily="@font/dosis"
        android:padding="@dimen/default_padding"
        android:text="@string/cambio_signo"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnMas"
        app:layout_constraintStart_toEndOf="@id/btnPunto"
        app:layout_constraintTop_toBottomOf="@id/btnTres" />


    <Button
        android:id="@+id/btnIgual"
        android:layout_width="@dimen/default_width_button"
        android:layout_height="@dimen/default_height_button"
        android:layout_marginEnd="@dimen/default_margin_end"
        android:layout_marginBottom="@dimen/default_margin_bottom"
        android:fontFamily="@font/dosis"
        android:padding="@dimen/default_padding"
        android:text="@string/igual"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnMas"
        app:layout_constraintTop_toBottomOf="@id/btnMenos" />
</androidx.constraintlayout.widget.ConstraintLayout>