<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background7">

    <Button
        android:id="@+id/btnTitleMetal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/home_top_margin"
        android:background="@color/white"
        android:fontFamily="@font/dosis"
        android:text="@string/button_item"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lvListMetal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_view_heigth"
        android:layout_marginTop="@dimen/list_view_margin_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnTitleMetal"
        tools:listitem="@layout/celda_avanzada" />

</androidx.constraintlayout.widget.ConstraintLayout>