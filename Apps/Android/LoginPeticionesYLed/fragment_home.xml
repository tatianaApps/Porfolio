<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_home">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvHomeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/general_margin"
            android:fontFamily="@font/homemade"
            android:text="@string/home_title"
            android:textAlignment="center"
            android:textSize="@dimen/text_title"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_margin="@dimen/margin_image"
            android:src="@drawable/ribon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHomeTitle" />

        <Button
            android:id="@+id/btnCamera"
            android:layout_width="@dimen/image_camera"
            android:layout_height="@dimen/image_camera"
            android:background="@drawable/camera"
            app:layout_constraintBottom_toBottomOf="@id/ivHome"
            app:layout_constraintStart_toEndOf="@id/ivHome" />

        <TextView
            android:id="@+id/tvHomeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/dosis"
            android:text="Tatia"
            android:textAlignment="center"
            android:textSize="@dimen/home_text_name"
            app:layout_constraintTop_toBottomOf="@id/ivHome"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/tvHomeAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosis"
            android:text="24 aÃ±os"
            android:textAlignment="center"
            android:textSize="@dimen/home_text_age"
            app:layout_constraintTop_toBottomOf="@+id/tvHomeName" />

        <ImageView
            android:id="@+id/ivHome2"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_margin="@dimen/general_margin"
            android:src="@drawable/ribon2"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@id/tvHomeAge" />

        <ImageView
            android:id="@+id/home3"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_margin="@dimen/general_margin"
            android:src="@drawable/ribon3"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toEndOf="@id/ivHome2"
            app:layout_constraintTop_toBottomOf="@id/tvHomeAge" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>