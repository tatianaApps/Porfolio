<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".75"
        android:background="@drawable/fondo" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_start"
        android:layout_marginTop="@dimen/default_margin_top"
        android:layout_marginEnd="@dimen/default_margin_end"
        android:fontFamily="@font/judas"
        android:text="@string/welcome_title"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/default_title_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivSpain"
        android:layout_width="@dimen/default_image_size_width"
        android:layout_height="@dimen/default_image_size_height"
        android:layout_marginStart="@dimen/default_margin_start"
        android:src="@drawable/imagen2"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_start"
        android:layout_marginEnd="@dimen/default_margin_end"
        android:fontFamily="@font/judas"
        android:text="@string/welcome_user_field"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivSpain" />

    <EditText
        android:id="@+id/etUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_top"
        android:fontFamily="@font/truculenta"
        android:hint="@string/welcome_user_name"
        android:inputType="textPersonName|textCapWords"
        android:textSize="@dimen/default_edit_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="26dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/imagen3"
        app:layout_constraintBottom_toBottomOf="@id/etUserName"
        app:layout_constraintEnd_toStartOf="@id/etUserName"
        app:layout_constraintTop_toTopOf="@id/etUserName" />

    <EditText
        android:id="@+id/etUserDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_top"
        android:clickable="true"
        android:fontFamily="@font/truculenta"
        android:hint="@string/welcome_user_date"
        android:inputType="date|number"
        android:textSize="@dimen/default_edit_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUserName" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="26dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/imagen4"
        app:layout_constraintBottom_toBottomOf="@id/etUserDate"
        app:layout_constraintEnd_toStartOf="@id/etUserDate"
        app:layout_constraintTop_toTopOf="@id/etUserDate" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="200dp"
        android:fontFamily="@font/judas"
        android:text="@string/welcome_access"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUserDate" />

</androidx.constraintlayout.widget.ConstraintLayout>